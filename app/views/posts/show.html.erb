<h2><%= @post.title.titleize %></h2>
<h4><%= @post.body %></h4>
<%= link_to "Edit", edit_post_path(@post) %>
|
<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>

<h3>Comment</h3>
<%= @comment.errors.full_messages.join(", ") %>
<%= form_for [@post, @comment] do |f| %>
  <div>
    <%= f.text_area :body, {rows: "5", cols: "50"} %>
  </div>
  <%= f.submit "Post Comment" %>
<% end %>

<h2>Comments</h2>
<% @post.new_first_comments.each do |pos| %>
    <%= pos.body %>
    <p><%= time_ago_in_words(pos.created_at) %> ago</p>
    <%= link_to "Delete", post_comment_path(@post, pos), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %>
    <hr>
<% end %>
