<h1>Sign In</h1>

<%= form_tag sessions_path do %>
  <div>
    <%= label_tag :email %><br>
    <%= email_field_tag :email %>
  </div><br>
  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %><br>
    <%= link_to "Forgot your password?", new_password_reset_path %>
  </div><br>
  <div>
    <%= submit_tag "Log In" %>
  </div>
<% end %>
<br>
New user? <%= link_to "Sign up now!", new_user_path %>
