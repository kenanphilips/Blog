
<div class="container">
  <h1>Sign In</h1>
  <%= form_tag sessions_path do %>
    <div class="form-group">
      <%= email_field_tag :email, "", class: "form-control", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, "", class: "form-control", placeholder: "Password" %><br>
      <%= link_to "Forgot your password?", new_password_reset_path %>
    </div>
    <div class="form-group">
      <%= submit_tag "Log In", class: "btn btn-default" %>
    </div>
  <% end %>
  New user? <%= link_to "Sign up now!", new_user_path %>
</div>
